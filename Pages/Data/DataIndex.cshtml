@page
@model IndexDatasetsModel
@{
        ViewData["Title"] = "Data Page";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Datasets</h1>
    <div>
        <a href="/Data/ManualEntry" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Manual Data
        </a>
    </div>
</div>

@if (Model.Datasets.Count == 0)
{
    <p>No datasets available.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Description</th>
                <th>Source</th>
                <th>Data Points</th>
                <th>Parameters</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dataset in Model.Datasets)
            {
                <tr>
                    <td>@dataset.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@dataset.Name</td>
                    <td>@dataset.Description</td>
                    <td>@dataset.DataSource</td>
                    <td>@dataset.DataPointCount</td>
                    <td>@dataset.ParameterCount (@string.Join(", ", dataset.ParameterNames))</td>
                    <td>
                        <div class="button-container">
                        <!-- Action buttons -->
                            <div class="btn-group" role="group">
                                <!-- Download dropdown -->
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-sm btn-success dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        Download
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <form method="post" asp-page-handler="Download" asp-route-id="@dataset.Id" asp-route-format="csv">
                                                <button type="submit" class="dropdown-item">CSV</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form method="post" asp-page-handler="Download" asp-route-id="@dataset.Id" asp-route-format="json">
                                                <button type="submit" class="dropdown-item">JSON</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>

                                <!-- View button -->
                                <form method="post" asp-page-handler="View" asp-route-id="@dataset.Id" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-primary">View</button>
                                </form>

                                <!-- Delete button -->
                                <form method="post" asp-page-handler="Delete" asp-route-id="@dataset.Id" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this dataset?');">Delete</button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
